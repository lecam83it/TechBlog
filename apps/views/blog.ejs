<!DOCTYPE html>
<html lang="en">

<head>

  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <meta name="description" content="">
  <meta name="author" content="">

  <title>Tech Blog</title>

  <!-- Bootstrap core CSS -->
  <link href="/public/theme/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">

  <!-- Custom fonts for this template -->
  <link href="/public/theme/vendor/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css">
  <link href='https://fonts.googleapis.com/css?family=Lora:400,700,400italic,700italic' rel='stylesheet' type='text/css'>
  <link href='https://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800'
    rel='stylesheet' type='text/css'>
  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.1.0/css/all.css" integrity="sha384-lKuwvrZot6UHsBSfcMvOkWwlCMgc0TaWr+30HWe3a4ltaBwTZhyTEggF5tJv8tbt"
    crossorigin="anonymous">

  <!-- Custom styles for this template -->
  <link href="/public/theme/css/clean-blog.min.css" rel="stylesheet">

  <style>
    div.fixed_icon {
      position: fixed;
      bottom: 8%;
      right: 5%;
    }

    .popup-box {
      background-color: #ffffff;
      border: 1px solid #797D82;
      bottom: 0;
      display: none;
      height: 415px;
      position: fixed;
      right: 70px;
      width: 300px;
      font-family: 'Open Sans', sans-serif;
    }

    .popup-box-on {
      display: block !important;
    }
  </style>

</head>

<body>

  <!-- Navigation -->
  <nav class="navbar navbar-expand-lg navbar-light fixed-top" id="mainNav">
    <div class="container">
      <a class="navbar-brand" href="/user/blog">Tech Blog</a>
      <div class="collapse navbar-collapse" id="navbarResponsive">
        <ul class="navbar-nav ml-auto">
          <form action="/user/blog" method="get">
            <input type="submit" class="btn btn-outline-danger" value="Home" style="border: none">
          </form>
          <form action="/user/logout" method="POST">
            <input type="submit" class="btn btn-outline-danger" value="Logout" style="border: none">
          </form>
        </ul>
      </div>
    </div>
  </nav>

  <!-- Page Header -->
  <header class="masthead" style="background-image: url('/public/theme/img/home-bg.jpg')">
    <div class="overlay"></div>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <div class="site-heading">
            <h1>Tech Blog</h1>
            <span class="subheading">The Blog for Technology</span>
          </div>
        </div>
      </div>
    </div>
  </header>
  <div class="fixed_icon">

    <a href="#" id="addClass">
      <span class="fa-stack fa-lg">
        <i class="fab fa-facebook-messenger fa-stack-2x" style="color: #FC5423"></i>
      </span>
    </a>

  </div>

  <div class="popup-box chat-popup" id="qnimate">
    <div class="popup-head" style="background: lightblue; width: 100%; height: auto;">
      <div class="row">
        <a href="#" id="removeClass">
          <span class="fa-stack fa-lg ml-2">
            <i class="fas fa-times fa-stack-1x"></i>
          </span>
        </a>
      </div>
    </div>
    <div style="height: auto; width: 100%;">
      <form action="" class="form-inline" style="position: fixed; bottom: 0px; padding: 0px">
        <input type="text" class="form-control" name="message" id="" aria-describedby="helpId" placeholder="Chat gi day..." style="width: 228px;">
        <input name="send" id="send" class="btn btn-primary" type="submit" value="Send" style="padding: 8px; width: 70px;">
      </form>
    </div>
  </div>

  <!-- Main Content -->
  <div class="container">
    <div class="row">
      <div class="col-lg-8 col-md-10 mx-auto">
        <% data.forEach(e =>{
          %>
          <div class="post-preview">
            <a href="post.html">
              <h2 class="post-title">
                <%= e.title %>
              </h2>
              <h3 class="post-subtitle">
                <%= e.content %>
              </h3>
            </a>
            <p class="post-meta">Posted by
              <a href="#">
                <%= e.author %>
              </a>
              on
              <%= e.created_at %>
            </p>
          </div>
          <hr>
          <%
        }) %>


            <!-- Pager -->
            <div class="clearfix">
              <a class="btn btn-primary float-right" href="#">Older Posts &rarr;</a>
            </div>
      </div>
    </div>
  </div>

  <hr>

  <!-- Footer -->
  <footer>
    <div class="container">
      <div class="row" id="contact">
        <div class="col-lg-8 col-md-10 mx-auto">
          <ul class="list-inline text-center">
            <li class="list-inline-item">
              <a href="https://www.facebook.com/le.cam.587">
                <span class="fa-stack fa-lg">
                  <i class="fa fa-circle fa-stack-2x"></i>
                  <i class="fab fa-facebook-f fa-stack-1x fa-inverse"></i>
                </span>
              </a>
            </li>
            <li class="list-inline-item">
              <a href="https://github.com/lecam83it">
                <span class="fa-stack fa-lg">
                  <i class="fa fa-circle fa-stack-2x"></i>
                  <i class="fab fa-github fa-stack-1x fa-inverse"></i>
                </span>
              </a>
            </li>
          </ul>
          <p class="copyright text-muted">Copyright &copy; Your Website 2018</p>
        </div>
      </div>
    </div>
  </footer>

  <!-- Bootstrap core JavaScript -->
  <script src="/public/theme/vendor/jquery/jquery.min.js"></script>
  <script src="/public/theme/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

  <!-- Custom scripts for this template -->
  <script src="/public/theme/js/clean-blog.min.js"></script>
  <script>
    $(function () {
      $("#addClass").click(function () {
        $('#qnimate').addClass('popup-box-on');
      });

      $("#removeClass").click(function () {
        $('#qnimate').removeClass('popup-box-on');
      });
    })
  </script>

</body>

</html>